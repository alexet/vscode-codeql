{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2017",
    "outDir": "out",
    "lib": [
      "es2017",
      "dom"
    ],
    "jsx": "react",
    "sourceMap": true,
    "rootDir": "..",
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules"
  ]
}